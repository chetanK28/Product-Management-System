@model IEnumerable<ProductManagementSystem.Models.Product>
@{
    ViewData["Title"] = "GetAllProduct";
}

<h1>GetAllProduct</h1>


<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.Quantity</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="DeleteProduct" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddProduct" class="btn btn-success">Add New Product</a>


